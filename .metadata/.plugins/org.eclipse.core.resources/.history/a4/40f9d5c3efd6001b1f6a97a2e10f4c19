/*5. Faça um programa que calcule e mostre a soma dos 50 primeiros números pares.
 */
#include <stdio.h>

int main() {

	setbuf(stdout, NULL);

	int soma = 0, qtdPares = 0, valor = 0;

	while (qtdPares <= 50) {

		if (valor % 2 == 0) {
			qtdPares++;
			soma = soma + valor;
			valor++;
		} else {
			valor++;
		}

	}
	printf("Soma 50 primerios pares: %d, i = %d", soma, qtdPares);
	return 0;
}
