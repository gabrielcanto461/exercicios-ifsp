/*5. Faça um programa que calcule e mostre a soma dos 50 primeiros números pares.
*/
#include <stdio.h>

int main() {

	setbuf(stdout, NULL);

	int soma = 0, valor=0;

	while (valor <= 50) {
	soma = valor + soma;
	valor = valor + 2;
	printf("Soma: %d, numero: %d\n", soma, valor);
	}
	//printf("Soma: %d, numero: %d", soma, valor);





}
