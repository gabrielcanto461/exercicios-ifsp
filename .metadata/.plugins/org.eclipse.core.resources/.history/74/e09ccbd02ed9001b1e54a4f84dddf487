/*8. Faça um programa que calcula a área de um triângulo, cuja base e altura são fornecidas
 pelo usuário. Esse programa não pode permitir a entrada de dados inválidos, ou seja,
 medidas menores ou igual a 0. Caso o usuário informe um dado inválido, o programa deve
 soliicitar a entrada do dado até ele ser válido.*/

#include <stdio.h>

int main() {

	setbuf(stdout, NULL);
	int baseValida = 0, alturaValida = 0;
	float base, altura;
	printf("Digite a base do triângulo: ");
	while (!baseValida) {

		scanf("%f", &base);
		if (base > 0) {
			baseValida = 1;
		} else {
			printf(
					"Valor inválido.\nDigite um valor positivo e diferente de 0: ");
		}
	}
	printf("Digite a altura do triângulo: ");
	while (!alturaValida) {
		scanf("%f", &altura);
		if (altura > 0) {
			alturaValida = 1;
		} else {
			printf(
					"Valor inválido.\nDigite um valor positivo e diferente de 0: ");
		}
	}

	printf("Área do triângulo: %.2f", (base * altura) / 2);
	return 0;
}
