#include <stdio.h>

int main() {

	int qtd_pares, valor, contador_pares, soma_pares=0;
	
	printf("Quantos numeros pares deseja somar?");
	scanf("%d", &qtd_pares);
	while (contador_pares <= qtd_pares) {
	valor = valor + 2;
	soma_pares = soma_pares + valor;
	contador_pares++;
	
	
	}
	printf("A soma dos %d primeiros numeros pares Ã© %d.", qtd_pares, soma_pares);
	return 0;
	
	}
